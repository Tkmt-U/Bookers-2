<!DOCTYPE html>
<html>
  <head>
    <title>Bookers</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <!-- ヘッダー -->

  <header class="navbar navbar-fixed-top navbar-inverse">
    <div class="container">
      <nav class="navbar-header">
        <span class="navbar-brand">Bookers</span>
      </nav>
      <nav class="">
        <ul class="nav navbar-nav navbar-right">
          <% if user_signed_in? %>
            <li class="">
              <%= link_to user_path(current_user.id) do %>
                <i class="glyphicon glyphicon-home" aria-hidden="true"> Home</i>
              <% end %>
            </li>
            <li class="">
              <%= link_to users_path do %>
                <i class="glyphicon glyphicon-user" aria-hidden="true"> Users</i>
              <% end %>
            </li>
            <li class="">
              <%= link_to books_path do %>
                <i class="glyphicon glyphicon-book" aria-hidden="true"> Books</i>
              <% end %>
            </li>
            <li class="">
              <%= link_to destroy_user_session_path, method: :delete do %>
                <i class="glyphicon glyphicon-log-out" aria-hidden="true"> logout</i>
              <% end %>
            </li>
          <% else %>
            <li class="">
              <%= link_to root_path do %>
                <i class="glyphicon glyphicon-home" aria-hidden="true"> Home</i>
              <% end %>
            </li>
            <li class="">
              <%= link_to home_about_path do %>
                <i class="glyphicon glyphicon-link" aria-hidden="true"> About</i>
              <% end %>
            </li>
            <li class="">
              <%= link_to new_user_registration_path do %>
                <i class="glyphicon glyphicon-edit" aria-hidden="true"> sign up</i>
              <% end %>
            </li>
            <li class="">
              <%= link_to new_user_session_path do %>
                <i class="glyphicon glyphicon-log-in" aria-hidden="true"> login</i>
              <% end %>
            </li>
          <% end %>
        </ul>
      </nav>
    </div>
  </header>


  <body>
    <div class='container'>
      <div class='row'>
        <%= flash[:notice] %><!-- フラッシュメッセージ -->

        <%= yield %>
      </div>
    </div>
  </body>

  <!-- フッター -->
  <footer>
    <p class='col-xs-3 col-xs-offset-9'>
      CopyRight Infratop.inc
    </p>
  </footer>
</html>
