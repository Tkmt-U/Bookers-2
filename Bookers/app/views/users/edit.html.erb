
<section class="">
  <div class="container">
    <div class="">
      <h2 class="">User info</h2>
    </div>
    <div class="">
      <% if @user.errors.any? %>
        <%= @user.errors.count %>errors prohibited this obj from being saved:
        <% @user.errors.full_messages.each do |message| %>
          <%= message %>
        <% end %>
      <% end %>
      <%= form_with model:@user, local:true do |f| %>
        <div class="form-group has-icon">
          <label>Name</label>
          <%= f.text_field :name, autofocus: true %>
          <div class="form-group has-icon">
            <label>Image</label>
            <%= f.attachment_field :profile_image %>
          </div>
          <div class="form-group has-icon">Introduction</div>
          <%= f.text_field :introduction, autofocus: true %>
          <div>
          <%= f.submit "Update User" %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</section>