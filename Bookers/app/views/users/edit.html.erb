<section class="slice slice-lg sct-color-1">
  <div class="container">
    <div class="form-header text-center">
      <h2 class="form-header-title">User info</h2>
    </div>
    <div class="form-body">
      <%= form_with model:@user, local:true do |f| %>
        <div class="form-group has-icon">
          <label>Name</label>
          <%= f.text_field :name, autofocus: true %>
          <div class="form-group has-icon">
            <div class="user-edit-image">
              <%= attachment_image_tag @user, :profile_image, :fill, 60, 60, format: 'jpeg' %>
            </div>
            <label>Image</label>
            <%= f.attachment_field :profile_image %>
          </div>
          <div>Introduction</div>
          <%= f.text_field :introduction, autofocus: true %>
          <div>
          <%= f.submit "Update User" %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</section>