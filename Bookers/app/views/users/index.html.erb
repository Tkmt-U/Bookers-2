<main>
  <%= render 'users/list', book: @book, user: @user %>
  <div class="col-xs-9">
    <h2>Users</h2>
    <table class="table table-striped">
      <tr class="title-box">
        <th>image</th>
        <th>name</th>
        <th></th>
      </tr>
      <% @users.each do |book| %>
        <tr class="">
          <td>
            <%= attachment_image_tag book, :profile_image, :fill, 50, 50, format: 'jpeg' %>
          </td>
          <td>
            <%= book.name %>
          </td>
          <td class="link">
            <%= link_to user_path(book.id) do %>
              <i class="bt"></i><%= "Show" %>
            <% end %>
          </td>
        </tr>
      <% end %>
    </table>
  </div>
</main>
