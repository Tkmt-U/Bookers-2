<main>
  <%= render 'users/list', book: @book, user: @user %>
  <div class="col-xs-9">
    <h2>Books</h2>
    <table class="table table-striped">
      <tr class="">
        <th></th>
        <th>Title</th>
        <th>Opinion</th>
      </tr>
      <% @books.each do |book| %>
        <tr class="">
          <td>
            <%= attachment_image_tag @user, :profile_image, :fill, 50, 50, format: 'jpeg' %>
          </td>
          <td class="">
            <%= link_to "#{book.title}", book_path(book.id) %>
          </td>
          <td>
            <%= book.body %>
          </td>
        </tr>
      <% end %>
    </table>
  </div>
</main>