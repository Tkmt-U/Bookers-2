<main>
    <%= render 'books/list', book: @book, user: @user %>
    <div class="col-xs-9">
      <h2>Books</h2>
      <table class="table table-striped">
        <thead>
          <tr class="">
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
          </tr>
        </thead>
        <tbody>
          <% @books.each do |book| %>
            <tr>
              <td>
                <%= link_to user_path(book) do %>
                  <%= attachment_image_tag book.user, :profile_image, :fill, 50, 50, format: 'jpeg', fallback: "no_image.jpg" %>
                <% end %>
              </td>
              <td class="">
                <%= link_to book_path(book) do %>
                  <i class=""></i><%= book.title %>
                <% end %>
              </td>
              <td>
                <%= book.body %>
              </td>
              <td>
                <div id="likes_buttons_<%= book.id %>">
                  <%= render 'favorites/favorite', book: book %>
                </div>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
      <div id="back">
        <a href="#">
          <%= image_tag asset_path('arrow.png') %>
        </a>
      </div>
    </div>
</main>