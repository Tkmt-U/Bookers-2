<main>
    <%= render 'books/list', book: @book, user: @user %>
    <div class="col-xs-9">
      <h2>Books</h2>
      <table class="table table-striped">
        <tr class="">
          <th></th>
          <th>Title</th>
          <th>Opinion</th>
        </tr>
        <% @books.each do |book| %>
          <tr class="">
            <td>
              <%= link_to user_path(book) do %>
                <%= attachment_image_tag book.user, :profile_image, :fill, 50, 50, format: 'jpeg', fallback: "no_image.jpg" %>
              <% end %>
            </td>
            <td class="">
              <%= link_to book_path(book) do %>
                <i class=""></i><%= book.title %>
              <% end %>
            </td>
            <td>
              <%= book.body %>
            </td>
          </tr>
        <% end %>
      </table>
    </div>
</main>