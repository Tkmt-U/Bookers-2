<main>
  <h2>Book detail</h2>
  <div class="box">
    <table class="table-box">
      <tr class="title-box">
        <th></th>
        <th>Title</th>
        <th>Opinion</th>
      </tr>
      <tr class="contents">
        <td>
          <%= attachment_image_tag @user, :profile_image, :fill, 50, 50, format: 'jpeg' %>
          <%= @user.name %>
        </td>
        <td class="link">
          <%= link_to "#{@book.title}", book_path(@book.id) %>
        <td>
          <%= @book.body %>
        </td>
      </tr>
    </table>
  </div>
  <%= render 'books/list', book: @book %>
</main>