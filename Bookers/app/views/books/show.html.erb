
<main>
  <h2>Book detail</h2>
  <div class="box">
    <table class="table-box">
      <tr class="title-box">
        <th></th>
        <th>Title</th>
        <th>Opinion</th>
      </tr>
      <% @book.each do |book| %>
        <tr class="contents">
          <td>
            <%= attachment_image_tag @user, :profile_image, :fill, 100, 100, format: 'jpeg' %>
          </td>
          <td class="link">
            <%= link_to "#{book.title}", book_path(book.id) %>
          <td>
            <%= book.body %>
          </td>
          <td>

          </td>
        </tr>
      <% end %>
    </table>
  </div>
  <%= render 'books/list', book: @book %>
</main>