<main>
  <h2>Users</h2>
  <div class="box">
    <table class="table-box">
      <tr class="title-box">
        <th>image</th>
        <th>name</th>
        <th></th>
      </tr>
      <% @users.each do |book| %>
        <tr class="contents">
          <td>
            <%= link_to book_path(book) do %>
              <%= attachment_image_tag @book.user, :profile_image %>
            <% end %>
          </td>
          <td>
            <%= book.name %>
          </td>
          <td class="link">
            <%= link_to book_path(book) do %>
              <i class="bt"></i><%= "Show" %>
            <% end %>
          </td>
        </tr>
      <% end %>
    </table>
  </div>
  <!--サイドバー-->
  <div class="userinfo">
    <section class="popular">
      <h2 class="sidebar-heading">User info</h2>
      <div class="sidebar-contents">
        <table class="table-box">
          <td class="">
            <%= attachment_image_tag @user, :profile_image, :fill, 100, 100, format: 'jpeg' %>
          </td>
          <tr class="title-box">
            <td>name</td>
            <td><%= @user.name %></td>
          </tr>
          <tr class="contents">
            <td>introduction</td>
            <td><%= @user.introduction %></td>
          </tr>
        </table>
      </div>
    </section>

    <section class="newbook">
      <h2 class="sidebar-heading">New book</h2>
      <div class="sidebar-contents">
        <%= form_with model:book, local:true do |f| %>
          <% if book.errors.any? %>
            <%= book.errors.count %>errors prohibited this obj from being saved:
            <% book.errors.full_messages.each do |message| %>
              <%= message %>
            <% end %>
          <% end %>

          <h4>Title</h4>
          <%= f.text_field :title %>
          <h4>Opinion</h4>
          <%= f.text_area :body %>
          <div class="submit-button">
            <%= f.submit "Create Book" %>
          </div>
        <% end %>
      </div>
    </section>
  </div>
</main>
